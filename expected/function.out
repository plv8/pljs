CREATE FUNCTION set_of_nest() RETURNS SETOF float AS
$$
	pljs.return_next( -0.2 );
	var rows = pljs.execute( "SELECT set_of_integers() AS i" );
	pljs.return_next( rows[0].i );
	return 0.2;
$$
LANGUAGE pljs;
SELECT * FROM set_of_nest();
