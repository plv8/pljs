CREATE FUNCTION set_of_records() RETURNS SETOF rec AS
$$
	pljs.return_next( { "i": 1, "t": "a" } );
	pljs.return_next( { "i": 2, "t": "b" } );
	pljs.return_next( { "i": 3, "t": "c" } );
$$
LANGUAGE pljs;
SELECT * FROM set_of_records();
 i | t 
---+---
 1 | a
 2 | b
 3 | c
(3 rows)

